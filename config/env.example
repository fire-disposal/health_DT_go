# 应用环境配置
ENV=development
# ENV=production  # 生产环境时启用

# Server 配置
PORT=8002
MSGLISTENER_PORT=5858

# 数据库配置 (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=12345678
POSTGRES_DBNAME=health_dt
POSTGRES_SSLMODE=disable

# Redis 配置
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# MQTT 配置
MQTT_BROKER=tcp://localhost:1883
MQTT_CLIENT_ID=health_dt_client
MQTT_USERNAME=
MQTT_PASSWORD=

# WebSocket 配置
WS_HOST=0.0.0.0
WS_PORT=8765
WS_PATH=/ws/health

# JWT 配置
JWT_SECRET=your-secret-key-please-change-in-production

# 日志配置 (可选)
LOG_LEVEL=info
# LOG_LEVEL=debug  # 开发环境可使用

# 数据库连接池配置 (可选)
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=3600  # 秒

# HTTP服务器配置 (可选)
HTTP_READ_TIMEOUT=15   # 秒
HTTP_WRITE_TIMEOUT=15  # 秒
HTTP_IDLE_TIMEOUT=60   # 秒